FROM osrf/ros:humble-desktop

RUN apt-get update && apt-get install -y \
    python3-pip \
    git \
    ros-humble-cv-bridge \
    python3-opencv \
    && rm -rf /var/lib/apt/lists/*

RUN apt-get update && apt-get remove -y python3-sympy && apt-get autoremove -y && rm -rf /var/lib/apt/lists/*

RUN pip3 install --upgrade pip

# Upgrade Pillow FIRST
RUN pip3 install --upgrade Pillow

# Pin NumPy to <2.0 for cv_bridge compatibility
RUN pip3 install "numpy<2.0"

# Install PyTorch NIGHTLY (supports RTX 5070 sm_120!)
RUN pip3 install --pre torch --index-url https://download.pytorch.org/whl/nightly/cu124

# Install stable torchvision (from PyPI, not nightly)
RUN pip3 install torchvision

# Install transformers from source
RUN pip3 install git+https://github.com/huggingface/transformers

# Install Qwen dependencies
RUN pip3 install qwen-vl-utils accelerate bitsandbytes

# Install API dependencies
RUN pip3 install fastapi uvicorn python-multipart

# Other deps
RUN pip3 install pymavlink

# Install YOLOv11-small
RUN pip3 install ultralytics

WORKDIR /app
RUN echo "source /opt/ros/humble/setup.bash" >> ~/.bashrc
