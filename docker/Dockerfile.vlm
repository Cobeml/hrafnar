FROM osrf/ros:humble-desktop

# Install Python packages for VLM
RUN apt-get update && apt-get install -y \
    python3-pip \
    git \
    && rm -rf /var/lib/apt/lists/*

# Remove conflicting system packages
RUN apt-get update && apt-get remove -y python3-sympy && apt-get autoremove -y && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN pip3 install --upgrade pip

# Install PyTorch with CUDA support
RUN pip3 install --no-cache-dir torch torchvision --index-url https://download.pytorch.org/whl/cu121

# Install transformers and VLM packages (upgrade transformers to latest)
RUN pip3 install --no-cache-dir \
    transformers>=4.45.0 accelerate peft bitsandbytes \
    pillow pymavlink opencv-python

# Install Qwen-VL specific packages
RUN pip3 install --no-cache-dir qwen-vl-utils

WORKDIR /app

# Source ROS2 setup in bashrc
RUN echo "source /opt/ros/humble/setup.bash" >> ~/.bashrc
